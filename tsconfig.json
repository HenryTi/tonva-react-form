{
    "compilerOptions": {
      "module": "esnext",
      "moduleResolution": "node",
      "target": "es6",
      "declaration": true,
      "lib": ["es2016", "dom"],
      "outDir": "./dist",
      "rootDir": "src",
      "sourceMap": true,
      "jsx": "react",
      "experimentalDecorators": true,
      "composite": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "src/old/**"
    ]
}
